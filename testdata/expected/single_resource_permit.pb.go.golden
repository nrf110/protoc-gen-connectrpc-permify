package testv1

func (req *UserRequest) GetChecks() pkg.CheckConfig {
    permission := "read"
    var checks []pkg.Check
    resource := req
    tenantId := "default"
    if req.CompanyId != "" {
        tenantId = req.CompanyId
    }
    check := pkg.Check {
        TenantID:     tenantId,
        Permission:   permission,
        Entity: &pkg.Resource {
            Type:       "User",
            ID:        req.Id,
        },
    }
    checks = append(checks, check)
    return pkg.CheckConfig {
        Type:   pkg.SINGLE,
        Checks: checks,
    }
}